/**
 * Implements hook_mail().
 */
function mp_emails_mail($key, &$message, $params) {
  switch($key) {
    case 'mp_emeils_job_propose':
      $message['subject'] = $params['subject'];
      $message['body'][] = $params['message'];
      break;

    default:
      // Nothing to do.
  }
}